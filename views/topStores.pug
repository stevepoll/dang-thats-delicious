extends layout

block content
  .inner
    h2= title
    table.table
      thead
        th Photo
        th Ranking
        th Name
        th Reviews
        th Average Rating
      each store, i in stores
        tr
          td: img(width=200, src=`/uploads/${store.photo || store.png}` alt=store.name)
          td #{i + 1}
          td: a(href=`/store/${store.slug}`)= store.name
          td= store.reviews.length
          td #{Math.round(store.averageRating * 10) / 10} / 5
